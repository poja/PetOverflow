package authentication;

public class DataValidator {
	
	public boolean isValidUsername(String username) {
		for (int i = 0; i < username.length(); i++)
			if (!username.charAt(i).isUsernameChar())
				return false;
		return true;
	}
	
	public boolean isValidPassword(String password) {
		return true;
	}
	
	private boolean isLetter(char c) {
		return c >= 'A' && c <= 'z';
	}
	
	private boolean isDigit(char c) {
		return c >= '0' && c <= '9';
	}
	
	private boolean isUsernameChar(char c) {
		return isLetter(c) || isDigit(c);
	}
	
	private static char[] ALLOWED_PASS_SYMBOLS = {'!', '@', '#', '$', '%', '^', '&', '*'};
	private boolean isPasswordChar(char c) {

		if (isLetter(c) || isDigit(c))
			return true;
		
		
		for (char sym : ALLOWED_PASS_SYMBOLS) {
			if (c == sym) return true;
		}
		
		return false;
		
	}

}
