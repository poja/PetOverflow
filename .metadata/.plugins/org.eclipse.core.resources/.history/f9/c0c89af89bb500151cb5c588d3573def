package servlets;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;

import dao.UserDao;
import dao.UserDaoMock;
import dto.AuthenticationDto;
import dto.RecentQuestionsDto;

/**
 * Servlet implementation class UserServlet
 */
public class RecentQuestionsServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
	Gson gson;

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public RecentQuestionsServlet() {
		super();
		gson = new Gson();
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		// response.getWriter().append("Served at:

		response.setContentType("application/json");
		Gson gson = new Gson();

		StringBuilder sb = new StringBuilder();
		String s;
		while ((s = request.getReader().readLine()) != null) {
			sb.append(s);
		}
		System.out.println(sb.toString());
		AuthenticationDto auth = gson.fromJson(sb.toString(), AuthenticationDto.class);
		System.out.println(auth.getUsername());
		
		UserDao dao = new UserDaoMock();
		if (dao.authenticate(auth.getUsername(), auth.getPassword())) {
			RecentQuestionsDto ans = new RecentQuestionsDto("What is your favorite color?");
			response.getWriter().append(gson.toJson(ans));
		}
		
	}

}
